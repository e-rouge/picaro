    --lineHeight: 16px;
    --bgLight: #FFFAF5;
    --bgMedium: #FFF3E3;
    --bgDark: #FFE5BE;
    --greyLight: #fafafa;
    --greyMedium: #ddd;
    --grey: #6a6e70;
    --greyDark: #414141;
    --secondaryDark: #225271;
    --secondary: #235271;
    --secondaryLight: #95C5D2;
    --mainDark: #591C1C;
    --main: #F8A722;
    --mainLight: #eaa89a;
    --highlight: #D36147;
    --highlightlight: #F99D77;
    --warning: #f6a71f;
    --warningDark: #f09800;
    --success: #57c16e;
    --successDark: #3a8c4a;
    --error: #E47159;
    --errorDark: #a94849;
    --info: #01C8EB;
    --infoDark: #2078cf;
    --dark: #41370e;
    --white: #fff;
    --black: #000;
    --3xs: 1px;
    --xxs: 2px;
    --xs: 4px;
    --s: 8px;
    --m: 16px;
    --l: 24px;
    --xl: 36px;
    --xxl: 52px;
}

